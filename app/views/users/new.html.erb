<%= form_with model: @user do |form|%>
  <%= form.label :username, 'Your user name here'%>
  <%= form.text_field :username%>

  <%= form.label :password%>
  <%= form.password_field :password%>

  <%= form.label :email%>
  <%= form.email_field :email, placeholder: "example@example.com"%>

  <%= form.submit "Create User"%>
<%end%>





